<div class="dummy-notification-container">
{{#each notifications as |notification|}}
  {{notification-message notification=notification}}
{{/each}}
</div>

<div class="dummy-body text-input field">

  <div class="section-title">Default</div>
  <hr>

    <div class="section">
      <div class="example">
        <div class="demo">
          {{frost-text}}
        </div>
        <div class="snippet">
          {{format-markdown "```handlebars
{{frost-text}}
  ```"
          }}
        </div>
      </div>
    </div>


  <div class="section-title">State</div>
  <hr>
    <div class="section">
      <div class="example">
        <div class="title">error</div>
        <div class="demo">
          {{frost-text
            class="error"
          }}
        </div>
        <div class="snippet">
          {{format-markdown "```handlebars
{{frost-text
  class='error'
}}
  ```"
          }}
        </div>
      </div>

      <div class="example">
        <div class="title">disabled</div>
        <div class="demo">
          {{frost-text
            disabled=true
          }}
        </div>
        <div class="snippet">
          {{format-markdown "```handlebars
{{frost-text
  disabled=true
}}
  ```"
          }}
        </div>
      </div>

      <div class="example">
        <div class="title">disabled value</div>
        <div class="demo">
          {{frost-text
            disabled=true
            value="Read only text"
          }}
        </div>
        <div class="snippet">
          {{format-markdown "```handlebars
{{frost-text
  disabled=true
  value='Read only text'
}}
    ```"
}}
        </div>
      </div>

  </div>

  <div class="section-title">Options</div>
  <hr>

  <div class="section">
      <div class="example">
        <div class="title">placeholder</div>

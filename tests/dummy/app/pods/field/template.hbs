<div class="dummy-body text-input field">

  <div class="section-title">Default</div>
  <hr>
  <div class="section">
    <div class="example">
      <div class="demo">
        {{! BEGIN-SNIPPET text }}
        {{frost-text
          hook='myTextfield'
        }}
        {{! END-SNIPPET }}
      </div>
      <div class="snippet">
        {{code-snippet name='text.hbs'}}
      </div>
    </div>
  </div>

  <div class="section-title">State</div>
  <hr>
  <div class="section">
    <div class="example">
      <div class="title">error</div>
      <div class="demo">
        {{! BEGIN-SNIPPET text-error }}
        {{frost-text
          class='error'
          hook='myTextfield'
        }}
        {{! END-SNIPPET }}
      </div>
      <div class="snippet">
        {{code-snippet name='text-error.hbs'}}
      </div>
    </div>

    <div class="example">
      <div class="title">disabled</div>
      <div class="demo">
        {{! BEGIN-SNIPPET text-disabled }}
        {{frost-text
          disabled=true
          hook='myTextfield'
          value='Disabled text'
        }}
        {{! END-SNIPPET }}
      </div>
      <div class="snippet">
        {{code-snippet name='text-disabled.hbs'}}
      </div>
    </div>

    <div class="example">
      <div class="title">readonly</div>
      <div class="demo">
        {{! BEGIN-SNIPPET text-readonly }}
        {{frost-text
          hook='myTextfield'
          readonly=true
          value='readonly'
        }}
        {{! END-SNIPPET }}
      </div>
      <div class="snippet">
        {{code-snippet name='text-readonly.hbs'}}
      </div>
    </div>

  </div>

  <div class="section-title">Options</div>
  <hr>
  <div class="section">
    <div class="example">
      <div class="title">placeholder</div>
      <div class="demo">
        {{! BEGIN-SNIPPET text-placeholder }}
        {{frost-text
          hook='myTextfield'
          placeholder='Placeholder'
        }}
        {{! END-SNIPPET }}
      </div>
      <div class="snippet">
        {{code-snippet name='text-placeholder.hbs'}}
      </div>
    </div>

    <div class="example">
      <div class="title">align</div>
      <div class="demo">
        {{! BEGIN-SNIPPET text-align }}
        {{frost-text
          align='right'
          hook='myTextfield'
        }}
        {{! END-SNIPPET }}
      </div>
      <div class="snippet">
        {{code-snippet name='text-align.hbs'}}
      </div>
    </div>
    <div class="example">
      <div class="title">tabindex</div>
      <div class="demo">
        {{! BEGIN-SNIPPET text-tabindex }}
        {{frost-text
          hook='myTextfield'
          tabindex=-1
        }}
        {{! END-SNIPPET }}
      </div>
      <div class="snippet">
        {{code-snippet name='text-tabindex.hbs'}}
      </div>
    </div>

    <div class="example">
      <div class="title">autofocus</div>
      <div class="demo">
        {{! BEGIN-SNIPPET text-autofocus }}
        {{frost-text
          autofocus=true
          hook='myTextfield'
        }}
        {{! END-SNIPPET }}
      </div>
      <div class="snippet">
        {{code-snippet name='text-autofocus.hbs'}}
      </div>
    </div>

    <div class="example">
      <div class="title">value</div>
      <div class="demo">
        {{! BEGIN-SNIPPET text-value }}
        {{frost-text
          hook='myTextfield'
          value='value'
        }}
        {{! END-SNIPPET }}
      </div>
      <div class="snippet">
        {{code-snippet name='text-value.hbs'}}
      </div>
    </div>
  </div>

  <div class="section-title">Events</div>
  <hr>
  <div class='section'>
    <div class="example">
      <div class="title">DOM events</div>
      <div class="demo">
        {{! BEGIN-SNIPPET text-dom-events }}
        {{frost-text
          hook='myTextfield'
          onChange=(action 'event')
          onClick=(action 'event')
          onContextMenu=(action 'event')
          onDoubleClick=(action 'event')
          onDrag=(action 'event')
          onDragEnd=(action 'event')
          onDragEnter=(action 'event')
          onDragLeave=(action 'event')
          onDragOver=(action 'event')
          onDragStart=(action 'event')
          onDrop=(action 'event')
          onFocusIn=(action 'event')
          onFocusOut=(action 'event')
          onInput=(action 'event')
          onKeyDown=(action 'event')
          onKeyPress=(action 'event')
          onKeyUp=(action 'event')
          onMouseDown=(action 'event')
          onMouseEnter=(action 'event')
          onMouseLeave=(action 'event')
          onMouseMove=(action 'event')
          onMouseUp=(action 'event')
          onSubmit=(action 'event')
          onTouchCancel=(action 'event')
          onTouchEnd=(action 'event')
          onTouchMove=(action 'event')
          onTouchStart=(action 'event')
        }}
        {{! END-SNIPPET }}
      </div>
      <div class="snippet">
         <div>Template</div>
        {{code-snippet name='text-dom-events.hbs'}}
        <br>
        <div>Controller</div>
        {{code-snippet name='text-dom-events.js'}}
      </div>
    </div>

    <div class="example">
      <div class="title">Text support events</div>
      <div class="demo">
        {{! BEGIN-SNIPPET text-support-events }}
        {{frost-text
          hook='myTextfield'
          onEnter=(action 'support' 'enter')
          onEscape=(action 'support' 'escape')
        }}
        {{! END-SNIPPET }}
      </div>
      <div class="snippet">
        <div>Template</div>
        {{code-snippet name='text-support-events.hbs'}}
        <br>
        <div>Controller</div>
        {{code-snippet name='text-support-events.js'}}
      </div>
    </div>
  </div>
  <div class='section-title'>Other</div>
  <hr>
  <div class='section'>
    <div class='example'>
      <div class='title'>Spread</div>
      <div class='demo'>
        {{! BEGIN-SNIPPET field-other-spread }}
        {{frost-text
          options=(hash
            disabled=true
            hook='myTextfield'
            value='value'
          )
        }}
        {{! END-SNIPPET }}
      </div>
      <div class='snippet'>
        {{code-snippet name='field-other-spread.hbs'}}
      </div>
    </div>
  </div>
</div>

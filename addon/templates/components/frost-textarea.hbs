{{textarea
  autofocus=autofocus
  cols=cols
  disabled=disabled
  focus-out=(action 'onBlur')
  form=form
  value=value
  placeholder=placeholder
  readonly=readonly
  rows=rows
  wrap=wrap
  tabindex=tabindex
}}
